{
  "plugins": [
    "stylelint-scss"
  ],
  "extends": "stylelint-config-standard",
  "rules": {
    "scss/at-extend-no-missing-placeholder": true,
    "comment-empty-line-before": "ignore",
    "no-eol-whitespace": "ignore",
    "no-descending-specificity": "ignore",
    "declaration-block-no-duplicate-properties": "ignore",
    "selector-pseudo-element-colon-notation": "ignore"
  }
}
